<!-- مسیر فایل: UI/Dialogs/AddFieldDialog.xaml -->
<!-- ابتدای کد -->
<Window x:Class="TradingJournal.UI.Dialogs.AddFieldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="افزودن فیلد جدید"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Style="{StaticResource MaterialDesignWindow}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <!-- اطلاعات اصلی -->
                <GroupBox Header="اطلاعات اصلی" Margin="0,8">
                    <StackPanel Margin="8">
                        <TextBox x:Name="FieldNameTextBox"
                                 md:HintAssist.Hint="نام فیلد (انگلیسی)"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="0,8"/>
                        
                        <TextBox x:Name="FieldLabelTextBox"
                                 md:HintAssist.Hint="برچسب فیلد (فارسی)"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="0,8"/>
                        
                        <ComboBox x:Name="FieldTypeComboBox"
                                  md:HintAssist.Hint="نوع فیلد"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  SelectionChanged="OnFieldTypeChanged"
                                  Margin="0,8"/>
                        
                        <TextBox x:Name="GroupNameTextBox"
                                 md:HintAssist.Hint="نام گروه"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="0,8"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8">
                            <CheckBox x:Name="IsRequiredCheckBox"
                                      Content="فیلد اجباری"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      Margin="0,0,16,0"/>
                            
                            <CheckBox x:Name="IsReadOnlyCheckBox"
                                      Content="فقط خواندنی"
                                      Style="{StaticResource MaterialDesignCheckBox}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- تنظیمات عددی -->
                <GroupBox x:Name="NumericPanel"
                          Header="تنظیمات عددی"
                          Visibility="Collapsed"
                          Margin="0,8">
                    <StackPanel Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="MinValueTextBox"
                                     Grid.Column="0"
                                     md:HintAssist.Hint="حداقل مقدار"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Margin="0,0,4,0"/>
                            
                            <TextBox x:Name="MaxValueTextBox"
                                     Grid.Column="1"
                                     md:HintAssist.Hint="حداکثر مقدار"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Margin="4,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- تنظیمات متنی -->
                <GroupBox x:Name="TextPanel"
                          Header="تنظیمات متنی"
                          Visibility="Collapsed"
                          Margin="0,8">
                    <StackPanel Margin="8">
                        <TextBox x:Name="MaxLengthTextBox"
                                 md:HintAssist.Hint="حداکثر طول"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="0,8"/>
                        
                        <TextBox x:Name="PlaceholderTextBox"
                                 md:HintAssist.Hint="متن راهنما"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="0,8"/>
                    </StackPanel>
                </GroupBox>

                <!-- گزینه‌ها -->
                <GroupBox x:Name="OptionsPanel"
                          Header="گزینه‌ها"
                          Visibility="Collapsed"
                          Margin="0,8">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Button Content="افزودن گزینه"
                                    Click="OnAddOption"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,8,8"/>
                            
                            <Button Content="حذف گزینه"
                                    Click="OnRemoveOption"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="0,0,0,8"/>
                        </StackPanel>
                        
                        <ListBox x:Name="OptionsListBox"
                                 Grid.Row="1"
                                 ItemsSource="{Binding Options}"
                                 DisplayMemberPath="Display"/>
                    </Grid>
                </GroupBox>

                <!-- Validation -->
                <GroupBox Header="اعتبارسنجی" Margin="0,8">
                    <TextBox x:Name="ValidationRuleTextBox"
                             md:HintAssist.Hint="قوانین اعتبارسنجی (مثال: required|min:5|max:50)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="False"
                             TextWrapping="Wrap"
                             Margin="8"/>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- دکمه‌ها -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="16">
            <Button Content="تأیید"
                    Click="OnOK"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"
                    Margin="0,0,8,0"/>
            
            <Button Content="انصراف"
                    Click="OnCancel"
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
<!-- پایان کد -->