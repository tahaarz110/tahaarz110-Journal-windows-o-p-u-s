<!-- ابتدای کد -->
<UserControl x:Class="TradingJournal.UI.Views.ReportDesigner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             FlowDirection="RightToLeft">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Templates -->
        <md:Card Grid.Column="0" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="قالب‌های گزارش"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="16"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Templates}"
                         DisplayMemberPath="Name"
                         Margin="16,0,16,16"/>
            </Grid>
        </md:Card>

        <!-- Report Designer -->
        <md:Card Grid.Column="1" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="طراح گزارش"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="16"/>

                <ScrollViewer Grid.Row="1">
                    <StackPanel x:Name="ReportPreview"
                                Margin="16"/>
                </ScrollViewer>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="16">
                    <Button Content="ذخیره قالب"
                            Click="OnSaveTemplate"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,8,0"/>
                    
                    <Button Content="پیش‌نمایش"
                            Click="OnPreviewReport"
                            Style="{StaticResource MaterialDesignFlatButton}"/>
                </StackPanel>
            </Grid>
        </md:Card>

        <!-- Elements -->
        <md:Card Grid.Column="2" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="عناصر گزارش"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="16"/>

                <ListBox Grid.Row="1"
                         x:Name="ElementsList"
                         ItemsSource="{Binding Elements}"
                         Margin="16,0"/>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="16">
                    <Button Content="افزودن"
                            Click="OnAddElement"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,8,0"/>
                    
                    <Button Content="حذف"
                            Click="OnRemoveElement"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="Red"/>
                </StackPanel>
            </Grid>
        </md:Card>
    </Grid>
</UserControl>
<!-- پایان کد -->